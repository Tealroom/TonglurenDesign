<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.amap.api.maps.MapView

            android:id="@+id/map1"

            android:layout_width="match_parent"

            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/btn_notice_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/zoom46"/>
            <TextView
                android:id="@+id/edt_search"
                android:layout_width="0.0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/home_search_shape"
                android:gravity="center_vertical"
                android:hint="这里是一些字体"
                android:lines="1"
               />


            <Button
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匹配设置"
                />
        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/arrows64"/>

        <LinearLayout
            android:id="@+id/main_home_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <include
                layout="@layout/custom_info_window" />

        </LinearLayout>
    </FrameLayout>







