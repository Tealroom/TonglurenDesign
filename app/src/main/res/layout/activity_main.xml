<?xml version="1.0" encoding="utf-8"?>
<!--手机虚拟键和应用重叠的问题靠fitsSystemWindows加在最外面来解决-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context="com.wanlichangmeng.tonglurendesign.activity.MainActivity">

    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:clipToPadding="true"-->
        <!--android:fitsSystemWindows="true" >-->



        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <!-- 首页的标题栏 -->

            <include
                android:id="@+id/rl_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/layout_main_title"
                app:layout_constraintBottom_toTopOf="@id/viewpager"/>

            <!--这里要装一个个view来弄啊啊啊啊啊啊啊啊啊-->
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/navigation"
                app:layout_constraintBottom_toBottomOf="@id/rl_title"
                />



            <!--&lt;!&ndash; 首页的中心内容 &ndash;&gt;-->
            <!--<FrameLayout-->
            <!--android:id="@+id/content_frame"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_below="@+id/rl_title"-->
            <!--android:background="@color/white_normal">-->
            <!--</FrameLayout>-->

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/windowBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/navigation" />
            <!--&lt;!&ndash;没用，反而会在最上面多个东西&ndash;&gt;-->
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="5dp"-->
            <!--android:layout_above="@id/bottom_navigation"-->
            <!--android:background="@drawable/bottom_shadow" />-->


        </android.support.constraint.ConstraintLayout>






    <!--</RelativeLayout>-->






    <!-- The navigation view -->
    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <!--   左侧菜单 -->
        <include layout="@layout/layout_main_left"/>
    </FrameLayout>





</android.support.v4.widget.DrawerLayout>

