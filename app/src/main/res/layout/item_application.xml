<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/application_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/application_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/application_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:text="username"/>
    <TextView
        android:id="@+id/application_relationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/application_username"
        app:layout_constraintTop_toTopOf="parent"
        android:text="好友"/>
    <TextView
        android:id="@+id/application_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/application_profile"
        app:layout_constraintTop_toBottomOf="@+id/application_username"
        android:text="2016-8-12"/>
    <TextView
        android:id="@+id/application_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/application_time"
        app:layout_constraintTop_toBottomOf="@+id/application_username"
        android:text="目的地"/>
    <Button
        android:id="@+id/application_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同意"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/application_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝"
        app:layout_constraintRight_toLeftOf="@+id/application_agree"
        />
    <TextView
        android:id="@+id/operation1_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66CCFF"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/application_profile"
        />




</android.support.constraint.ConstraintLayout>