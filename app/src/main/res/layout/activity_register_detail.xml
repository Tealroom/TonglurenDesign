<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--用户名-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/user2"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_name"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="用户名不得少于4个字符"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--密码-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/password2"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="密码"
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_password"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--确认密码-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/password2"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_password_sure"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--性别-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/sex"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="性别        "
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_sex"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="女"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--出生年月-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/birth"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="出生年月"
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_birth"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint=""
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--偏好设定-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/hobby"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="偏好设定"
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_hobby"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint=""
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>
    </LinearLayout>
    <!--标签-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/label"
            android:scaleType="centerInside" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="标签         "
            android:textColor="@color/common_text_gray_one"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="-58dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/register_label"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint=""
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"
            android:background="@drawable/edit_bg"/>

    </LinearLayout>
    <!--完成-->
    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="35dp"

        android:background="@drawable/button_shape_circle_orange"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
